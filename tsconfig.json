{
    "compilerOptions" : {
        "types" : ["jest"],
        "target" : "es2024",
        "module" : "nodenext",
        "outDir" : "./dist",
        "rootDir" : "./src",
        "strict" : true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "removeComments": false,
    },
}